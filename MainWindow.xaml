<Window x:Class="VUKVWeightApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:views="clr-namespace:VUKVWeightApp.Views"
        mc:Ignorable="d"
        Title="PVFS Měřící systém"
        Width="1100"
        Height="740"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Bg}"
        WindowStyle="None"
        ResizeMode="CanResize"
        SnapsToDevicePixels="True">

    <WindowChrome.WindowChrome>
        <shell:WindowChrome
            GlassFrameThickness="0"
            ResizeBorderThickness="2"
            CornerRadius="26"
            UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===================== HLAVIČKA ===================== -->
        <Border Grid.Row="0"
                Background="{StaticResource Card}"
                BorderBrush="{StaticResource StrokeSoft}"
                BorderThickness="0,0,0,1"
                Padding="10,0">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Drag oblast -->
                <Grid Grid.Column="0"
                      Background="Transparent"
                      shell:WindowChrome.IsHitTestVisibleInChrome="True"
                      MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">

                    <TextBlock Text="PVFS Měřící systém"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Fg}"
                               VerticalAlignment="Center"
                               Margin="6,0,0,0"/>
                </Grid>

                <!-- Tlačítka -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            shell:WindowChrome.IsHitTestVisibleInChrome="False">

                    <Button Content="   -"
                            Width="45"
                            Height="45"
                            Padding="0,0,8,0"
                            Style="{StaticResource NeonButton}"
                            Click="Minimize_Click"/>

                    <Button Content="□"
                            Width="45"
                            Height="45"
                            Margin="0,0,8,0"
                            Style="{StaticResource NeonButton}"
                            Click="Maximize_Click"/>

                    <Button Content="×"
                            Width="45"
                            Height="45"
                            Margin="0,0,8,0"
                            Style="{StaticResource NeonButton}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===================== OBSAH ===================== -->
        <Grid Grid.Row="1" Margin="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HORNÍ ČÁST -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- OVLÁDÁNÍ + VÁHY -->
                <Border Grid.Column="0"
                        Style="{StaticResource NeonPanel}"
                        Padding="14"
                        Margin="0,0,12,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tlačítka -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,12">
                            <Button Content="Připojit obě"
                                    Command="{Binding ConnectBothCommand}"
                                    Style="{StaticResource NeonButton}"
                                    Margin="0,0,10,0"/>

                            <Button Content="Odpojit obě"
                                    Command="{Binding DisconnectBothCommand}"
                                    Style="{StaticResource NeonButton}"
                                    Margin="0,0,10,0"/>

                            <Button Content="Nulovat obě"
                                    Command="{Binding ZeroBothCommand}"
                                    Style="{StaticResource NeonButton}"/>
                        </StackPanel>

                        <!-- Váhy -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <views:Scale1BoxControl Grid.Column="0"/>
                            <views:Scale2BoxControl Grid.Column="1"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- SKUPINY / TENZOMETRY -->
                <views:GroupsTabsControl Grid.Column="1"/>
            </Grid>

            <!-- ZÁZNAMY -->
            <views:RecordsControl Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
