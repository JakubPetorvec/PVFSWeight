<UserControl x:Class="VUKVWeightApp.Views.Scale1BoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource NeonPanel}" Padding="12" Margin="0,0,12,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel LastChildFill="True" Margin="0,0,0,8">
                <Ellipse Width="10" Height="10" Margin="0,5,8,0"
                         Fill="{Binding Scale1StatusDotBrush}"/>
                <TextBlock Text="Váha 1" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource Fg}" />
            </DockPanel>

            <TextBox Grid.Row="1" Height="34"
                     Text="{Binding Scale1Ip, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource NeonTextBox}" />

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                <Button Content="Připojit"
                        Command="{Binding ConnectScale1Command}"
                        IsEnabled="{Binding CanConnectScale1}"
                        Style="{StaticResource NeonButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Odpojit"
                        Command="{Binding DisconnectScale1Command}"
                        IsEnabled="{Binding IsScale1Connected}"
                        Style="{StaticResource NeonButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Nulovat"
                        Command="{Binding ZeroScale1Command}"
                        IsEnabled="{Binding IsScale1Connected}"
                        Style="{StaticResource NeonButton}"/>
            </StackPanel>

            <TextBlock Grid.Row="3"
                       Text="{Binding Scale1WeightText}"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="{StaticResource Accent}"
                       Margin="0,12,0,0"/>
        </Grid>
    </Border>
</UserControl>
