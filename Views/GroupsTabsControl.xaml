<UserControl x:Class="VUKVWeightApp.Views.GroupsTabsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
        </Style>

        <!-- Tab styling aligned with the rest of the "Neon" panels -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="Background" Value="{StaticResource Card}"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource StrokeSoft}"
                                BorderThickness="1"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource Card2}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Stroke}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Card2}"/>
                                <Setter Property="Foreground" Value="{StaticResource Fg}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small helper for uniform progress rows -->
        <Style x:Key="GroupRowTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Fg}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="GroupRowRight" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource FgMuted}"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource NeonPanel}" Padding="14">
        <TabControl Background="Transparent" BorderThickness="0">
            <TabItem Header="Skupiny" IsSelected="True">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- G1 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="{Binding Group1Label}" Style="{StaticResource GroupRowTitle}" Margin="0,0,4,0" />
                            <!-- Zatížení (kg) – nechávám tu, jen vypnuté (na přání) -->
                            <!--<TextBlock DockPanel.Dock="Right" Text="{Binding Group1ValueText}" Style="{StaticResource GroupRowRight}" />-->
                            <TextBlock DockPanel.Dock="Right"
                                       Text="{Binding Group1Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                       Style="{StaticResource GroupRowRight}" />
                        </DockPanel>
                        <ProgressBar Height="12" Maximum="100" Value="{Binding Group1Percent, Mode=OneWay}" Style="{StaticResource NeonProgress}" />
                    </StackPanel>

                    <!-- G2 -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="{Binding Group2Label}" Style="{StaticResource GroupRowTitle}"  Margin="0,0,4,0"/>
                            <!--<TextBlock DockPanel.Dock="Right" Text="{Binding Group2ValueText}" Style="{StaticResource GroupRowRight}" />-->
                            <TextBlock DockPanel.Dock="Right"
                                       Text="{Binding Group2Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                       Style="{StaticResource GroupRowRight}" />
                        </DockPanel>
                        <ProgressBar Height="12" Maximum="100" Value="{Binding Group2Percent, Mode=OneWay}" Style="{StaticResource NeonProgress}" />
                    </StackPanel>

                    <!-- G3 -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,12">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="{Binding Group3Label}" Style="{StaticResource GroupRowTitle}" Margin="0,0,4,0" />
                            <!--<TextBlock DockPanel.Dock="Right" Text="{Binding Group3ValueText}" Style="{StaticResource GroupRowRight}" />-->
                            <TextBlock DockPanel.Dock="Right"
                                       Text="{Binding Group3Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                       Style="{StaticResource GroupRowRight}" />
                        </DockPanel>
                        <ProgressBar Height="12" Maximum="100" Value="{Binding Group3Percent, Mode=OneWay}" Style="{StaticResource NeonProgress}" />
                    </StackPanel>

                    <!-- G4 -->
                    <StackPanel Grid.Row="3">
                        <DockPanel LastChildFill="True">
                            <TextBlock Text="{Binding Group4Label}" Style="{StaticResource GroupRowTitle}" Margin="0,0,4,0"/>
                            <!--<TextBlock DockPanel.Dock="Right" Text="{Binding Group4ValueText}" Style="{StaticResource GroupRowRight}" />-->
                            <TextBlock DockPanel.Dock="Right"
                                       Text="{Binding Group4Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                       Style="{StaticResource GroupRowRight}" />
                        </DockPanel>
                        <ProgressBar Height="12" Maximum="100" Value="{Binding Group4Percent, Mode=OneWay}" Style="{StaticResource NeonProgress}" />
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Channels as progress rows (no table) -->
            <TabItem Header="Váha1">
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Váha 1" Foreground="{StaticResource Fg}" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding Scale1Channels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,12">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Channel}" Style="{StaticResource GroupRowTitle}" />
                                        <!-- kg – nechávám pro případné zapnutí -->
                                        <!--<TextBlock DockPanel.Dock="Right" Text="{Binding KgText}" Style="{StaticResource GroupRowRight}" />-->
                                        <TextBlock DockPanel.Dock="Right"
                                                   Text="{Binding Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                                   Style="{StaticResource GroupRowRight}" />
                                    </DockPanel>
                                    <ProgressBar Height="12"
                                                 Maximum="100"
                                                 Value="{Binding Percent, Mode=OneWay}"
                                                 Style="{StaticResource NeonProgress}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>

            <TabItem Header="Váha2">
                <StackPanel Margin="0,10,0,0">
                    <TextBlock Text="Váha 2" Foreground="{StaticResource Fg}" FontWeight="SemiBold" Margin="0,0,0,10"/>

                    <ItemsControl ItemsSource="{Binding Scale2Channels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,12">
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Channel}" Style="{StaticResource GroupRowTitle}" />
                                        <!--<TextBlock DockPanel.Dock="Right" Text="{Binding KgText}" Style="{StaticResource GroupRowRight}" />-->
                                        <TextBlock DockPanel.Dock="Right"
                                                   Text="{Binding Percent, Mode=OneWay, StringFormat={}{0:0.0}%}"
                                                   Style="{StaticResource GroupRowRight}" />
                                    </DockPanel>
                                    <ProgressBar Height="12"
                                                 Maximum="100"
                                                 Value="{Binding Percent, Mode=OneWay}"
                                                 Style="{StaticResource NeonProgress}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Border>
</UserControl>
